<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="5.0">
  <display-name>BookStore</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <context-param>
    <param-name>Driver</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
    <param-name>Username</param-name>
    <param-value>system</param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>Connect</display-name>
    <servlet-name>Connect</servlet-name>
    <servlet-class>Connect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connect</servlet-name>
    <url-pattern>/Connect</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Connection</display-name>
    <servlet-name>Connection</servlet-name>
    <servlet-class>Connection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connection</servlet-name>
    <url-pattern>/Connection</url-pattern>
  </servlet-mapping>
  
<servlet-mapping>
  <servlet-name>default</servlet-name>
   
   <url-pattern>/Assets/*</url-pattern>
    
    <url-pattern>/UserImages/*</url-pattern>
    <url-pattern>/AuthorImages/*</url-pattern>
    <url-pattern>/BookImages/*</url-pattern>
    
    
    
    <url-pattern>/Backups/AuthorInfoPage/StyleAuthorInfos.css</url-pattern>
    
   <url-pattern>/Backups/AuthorsPage/AuthorsPage.css</url-pattern>
   
   <url-pattern>/Backups/BooksPage/style.css</url-pattern>
   <url-pattern>/Backups/BooksPage/BooksPage.css</url-pattern>
   <url-pattern>/Backups/BooksPage/index.html</url-pattern>
   <url-pattern>/Backups/BooksPage/main.js</url-pattern>
   
   <url-pattern>/Backups/HOME/HOME.css</url-pattern>
  
   <url-pattern>/Backups/AboutUsPage/style.css</url-pattern>
   
   <url-pattern>/Backups/AdminLoginPage/style.css</url-pattern>
   <url-pattern>/Backups/AdminLoginPage/main.js</url-pattern>
   
   <url-pattern>/Backups/UserLoginPage/style.css</url-pattern>
   
   <url-pattern>/Backups/UserSignUpPage/style.css</url-pattern>
   <url-pattern>/Backups/UserSignUpPage/app.js</url-pattern>
   
   <url-pattern>/Backups/ProfilePage/profile.css</url-pattern>
   
   <url-pattern>/Backups/Supplement/HeaderForClient.css</url-pattern>
   <url-pattern>/Backups/Supplement/HeaderForUser.css</url-pattern>
   <url-pattern>/Backups/Supplement/Footer.css</url-pattern>
  
  
   <url-pattern>/AdminDashboard/index.css</url-pattern>
   <url-pattern>/AdminDashboard/AddAuthor.css</url-pattern>
   <url-pattern>/AdminDashboard/AddBook.css</url-pattern>
   <url-pattern>/AdminDashboard/AuthorList.css</url-pattern>
   <url-pattern>/AdminDashboard/BookList.css</url-pattern>
   <url-pattern>/AdminDashboard/ClientList.css</url-pattern>
   <url-pattern>/AdminDashboard/Login.css</url-pattern>
   <url-pattern>/AdminDashboard/CategoryList.css</url-pattern>
   
   
</servlet-mapping>
    

   <error-page>
   <error-code>404</error-code>
   <location>/errorPage.jsp</location>
   </error-page>
   
   <error-page>
   <exception-type>java.lang.Throwable</exception-type>
   <location>/errorPage.jsp</location>
   </error-page>

</web-app>